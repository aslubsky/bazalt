#!/bin/bash## chkconfig: 35 90 12# description: Sphinx## Get function from functions library. /etc/init.d/functions# Start the service Sphinxstart() {        initlog -c "echo -n Starting Sphinx server: "        /usr/bin/sudo -u apache /usr/local/bin/searchd &        ### Create the lock file ###        touch /var/lock/subsys/searchd        success $"Sphinx server startup"        echo}# Restart the service Sphinxstop() {        initlog -c "echo -n Stopping Sphinx server: "        killproc searchd        ### Now, delete the lock file ###        rm -f /var/lock/subsys/searchd        echo}### main logic ###case "$1" in  start)        start        ;;  stop)        stop        ;;  status)        status searchd        ;;  restart|reload|condrestart)        stop        start        ;;  *)        echo $"Usage: $0 {start|stop|restart|reload|status}"        exit 1esacexit 0