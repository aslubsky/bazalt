<?php/** * RssWriter */    class RssWriter{    public static function generate($head, $list)    {        header('Content-type: application/rss+xml;charset=utf-8');        $xml = '<?xml version="1.0"?>';        $xml .= '<rss version="2.0">';        $xml .= '  <channel>';        if ($head) {            $xml .= '<title>' . $head['title'] . '</title>';            $xml .= '<link>' . $head['link'] . '</link>';            $xml .= '<description>' . $head['description'] . '</description>';            //$xml .= '<pubDate>' . $head['created_at'] . '</pubDate>';        }        foreach ($list as $item) {            $xml .= '<item>';            $xml .= '  <title>' . $item['title'] . '</title>';            $xml .= '  <link>' . $item['link'] . '</link>';            $xml .= '  <description>' . $item['description'] . '</description>';            if (isset($item['comments'])) {                $xml .= '  <comments>' . $item['comments'] . '</comments>';            }            $xml .= '  <pubDate>' . $item['created_at'] . '</pubDate>';            $xml .= '</item>';        }        $xml .= '  </channel>';        $xml .= '</rss>';        return $xml;    }}