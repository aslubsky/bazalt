<?phpclass GoogleSearch{    /**     * Количество страниц сайта, проиндексированных в системе Google.     */    public static function getGoogleIndex($host)    {        $cacheKey = __CLASS__ . __FUNCTION__ . $host;        $googleIndex = Cache::Singleton()->getCache($cacheKey);        if ($googleIndex === false) {            $host = urlencode($host);            $url = 'www.google.com/search?hl=en&safe=off&q=site:' . $host . '&btnG=Search';            $content = Url::getContent($url);            $googleIndex = 0;            if (strlen(trim($content)) > 0) {                if (preg_match('/<div\s*id=["\']?resultStats["\']?>\w*\s*([0-9,]+)\s*\w*<nobr>/i', $content, $matches)) {                    $googleIndex = (int) str_replace(',', '', $matches[1]);                }            }            unset($content);            Cache::Singleton()->setCache($cacheKey, $googleIndex);        }        return $googleIndex;    }}